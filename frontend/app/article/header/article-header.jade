.article-header
  .avatar
    img(src='/images/user.png', ng-src='/api/users/{{::ctrl.article.creator._id}}/profile/avatar')
  .text
    a.author(ng-href='/#/profile/{{::ctrl.article.creator._id}}') {{::ctrl.authorName}}
    .bio(ng-if='ctrl.article.creator.description')
      span {{::ctrl.article.creator.description}}
    .meta
      span(am-time-ago="::ctrl.article.timestamps.creation")
      span.dot
      span.reading {{::ctrl.article.stats.reading.minutes}} #{__('min read')}
  .options
    article-actions(article='ctrl.article')
